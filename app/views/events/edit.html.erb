<h1>Editing event</h1>

<%= render "form", event: @event %>

<br>

<div>
  <%= link_to "Show this event", @event, class: 'btn btn-primary', style: 'margin-right: 10px;' %>
  <%= link_to "Back to events", events_path, class: 'btn btn-secondary' %>
</div>

