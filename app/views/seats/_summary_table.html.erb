<table id=<%= seats_summary_table_dom_id() %> class="table table-striped table-hover">
    <thead>
      <tr class="highlight-heading">
        <th>Category</th>
        <th>Section</th>
        <th>Number of Guests</th>
        <th>Total Seats</th>
        <th>Allocated Seats</th>
        <th>Committed Seats</th>
        <th>Remaining Seats</th>
      </tr>
    </thead>
    <tbody>
      <% event.calculate_seating_summary.each do |category| %>
        <tr>
            <td><%= category[:category] %></td>
            <td><%= category[:section] %></td>
            <td><%= category[:guests_count] %></td>
            <td><%= category[:total_seats] %></td>
            <td><%= category[:allocated_seats] %></td>
            <td><%= category[:committed_seats] %></td>
            <td><%= category[:remaining_seats] %></td> 
        </tr>
      <% end %>
    </tbody>
  </table>