<!--this file is created to provide shared links for all pages-->
<div id="navigation-header" class="header">
  <% if user_signed_in? %>
    <div id="navigation-user-info" class="user-info">
      Welcome, <%= current_user.name.presence || current_user.email %>!
    </div>
  <% end %>
  <div class="nav-links">
    <%= link_to 'Home', root_path, class: "navigation-link" %>|
    <%= link_to 'Event Dashboard', events_path, class: "navigation-link" %>|
    <% if user_signed_in? %>
      <%= link_to 'Sign Out', destroy_user_session_path, data: { turbo_method: :delete }, class: "navigation-auth" %>
    <% end %>
  </div>
</div>