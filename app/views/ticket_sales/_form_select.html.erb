<%# Dropdown for selecting an Eventbrite event %>
<%= form_with url: event_path(event), method: :get, local: true, id: "ticket-sales-select" do |f| %>
  <%= f.label :external_event, "Select an external event" %>
  <%= 
    f.select :external_event_id, options_for_select(
      external_events.map { |event| [event[:name], event[:id]] }, params[:external_event_id]), 
      include_blank: "Select Event" 
  %>
  <%= f.submit "Show Ticket Sales" %>
<% end %>